<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <variable name="mylayout" value="${longdate} | ${level:uppercase=true} | ${message}"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target xsi:type="Debugger" name="Debug" layout="${mylayout}" />
    <target xsi:type="ColoredConsole" name="Console" layout="${mylayout}" />
    <target xsi:type="File" name="File" fileName="${basedir}/logs/${shortdate}.log" layout="${mylayout}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="Debug, Console" />
    <logger name="*" minlevel="Debug" writeTo="File" />
  </rules>
</nlog>
